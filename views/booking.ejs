<!DOCTYPE html>
<html lang="zh-Hant">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Booking</title>
  <link rel="stylesheet" href="/booking/booking.css">
  <link rel="stylesheet" href="/index/style.css">
</head>

<body>
  <div class="booking-container">
    <%- include('_partials/nav') %>
    <div class="wrapper">
      <h1>Booking</h1>

      <section class="selection-section">
        <h2>Selecting a Trainer</h2>
        <div class="trainers">
        <% if (trainers && trainers.length > 0) { %>
          <% trainers.forEach(function(trainer) { %>
          <div class="trainer" data-id="<%= trainer._id %>" data-name="<%= trainer.name %>">
            <img src="<%= trainer.avatar || 'pic/trainer1.avif' %>" alt="<%= trainer.name %>">
            <h3><%= trainer.name %></h3>
            <p><%= trainer.description || 'No description available' %></p>
          </div>
          <% }); %>
        <% } else { %>
          <p>No trainers available at the moment.</p>
        <% } %>
        </div>
      </section>

      <section class="selection-section" id="calendar-section" style="display: none;">
        <h2>Select a Date</h2>
        <div class="calendar-controls">
          <select id="year-select"></select>
          <select id="month-select"></select>
        </div>
        <div id="calendar"></div>
      </section>

      <section class="selection-section" id="notes-section" style="display: none;">
        <h2>Additional Notes</h2>
        <div class="notes-section">
          <textarea id="notes" placeholder="Enter any special requests or notes for your trainer..." rows="3"></textarea>
        </div>
      </section>

      <div class="actions" id="actions-section" style="display: none;">
        <input type="hidden" id="userId" value="<%= user && user.id ? user.id : '' %>">
        <button id="submitBtn">Submit</button>
        <a href="/dashboard" class="btn secondary">Back to Dashboard</a>
      </div>
      <div id="message"></div>
    </div>
  </div>

  <script src="/booking/booking.js"></script>
</body>

</html>