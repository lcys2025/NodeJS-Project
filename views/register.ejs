        <section>
        <div class="register-container">
            <div class="register-box">
                <% if (typeof prefilledEmail === 'undefined') { %>
                    <h1> Google Login </h1>
                    Click here to authenticate with Google
                    <form action="/auth/google" method="GET">
                        <button type="submit">Google credential</button>
                    </form>
                <% } else { %>
                    <p>Thank you for autheticating with your Google credential.</p>
                    <p>Please complete the following extra information to complete the registration.</p>
                <% } %>
                <h1> Face Login </h1>
                Click here to authenticate with your 'smiley' face.
                <form action="/face" method="GET">
                    <button type="submit">Login with Face Recognition</button>
                </form>                                    
                <h2>Join The fitness membership</h2>
                <form class="register-form" id="registerForm" method="POST" action="/auth/register">
                    <label for="name">Nameï¼š</label>
                    <input type="text" id="name" name="name" placeholder="Chan Tai Man" required>
                    <label for="email">Emailï¼š</label>
                    <input id="email" name="email" value="<%= typeof prefilledEmail !== 'undefined' ? prefilledEmail : '' %>" <%= emailLocked ? 'readonly' : '' %> placeholder="Lcys2025@outlook.com" required>
                    <label for="password">Passwordï¼š</label>
                    <input type="password" id="password" name="password" placeholder="Password" required>
                    <label for="confirmPassword">Confirm Passwordï¼š</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" required>
                    <label for="plan">Different plan optionsï¼š</label>
                    <select id="plan" name="plan">
                        <option value="basic">Basic Plan - $100/month with 5 trainer days</option>
                        <option value="premium">Premium Plan - $150/month with 10 trainer days</option>
                        <option value="vip">VIP Plan - $200/month with 20 trainer days</option>
                    </select>
                    <button type="submit" id="register-button">submit</button>
                </form>
            </div>
            </div>
        </section>

